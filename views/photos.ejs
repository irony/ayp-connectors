
  <div class="photos" >
    <div style="padding-left: 10px;" ng-controller="PhotoController" when-scrolled="loadMore()" >
        <div class="row">
          <div class="span12">
            <h2 ng-cloak>{{photos.length}} photos found</h2>
          </div>
        </div>


        <div id="wall" class="thumbnails row"  when-scrolled="loadMore()">
          <div ng-repeat="group in groups | orderBy:'name':true" id="{{group.name}}" class="group">
                <h3 class="pull-center">{{group.name}}</h3>
                <div  ng-repeat="photo in group.photos" class="photo">
                  <img class="{{photo.class}}" ng-src="{{photo.src}}">
                  <a href="/share?date={{photo.taken}}"><i class="icon-share"></i></a>
                </div>

          </div>
          <div class="slider">
              <label class="pull-left  muted">Only the best</label>
              <label class="pull-right  muted">All your photos</label>
              <input type="range" ng-model="zoomLevel" id="zoomLevel">
          </div>  
        <div>
    </div>
  </div>


    <script type="text/javascript" src="/controllers/photo.js"></script>
    <script src="//raw.github.com/hakimel/zoom.js/master/js/zoom.js"></script>
    <script>
    
      document.querySelector( '#wall' ).addEventListener( 'click', function( event ) {
        if (event.target.tagName == "IMG") {
          zoom.to({ element: event.target });
          $('.slider').toggle();
        }
      } );

