
  <div id="photos" class="photos" >
    <div style="padding-left: 10px; " ng-controller="PhotosController">

        <div id="wall" class="thumbnails row">
          <div  ng-repeat="photo in photos" class="photo {{photo.class}}" ng-controller="PhotoController">
            <a ng-click="hide(photo)"><i class="icon-remove"></i></a>
            <a ng-click="star(photo)"><i class="icon-heart-empty"></i></a>
            <a href="/share?date={{photo.taken.split('T')[0]}}"><i class="icon-share"></i></a>
            <img title="{{photo.groups}}" ng-src="{{photo.src}}" src="/img/photos-icon.png" ng-click="click(photo)" ng-dblclick="star(photo)" ng-mousemove="view(photo)">

          </div>
          <div class="slider">
              <label class="pull-right  muted">All your photos</label>
              <label class="pull-left  muted">Only the best</label>
              <label class="pull-center muted">{{photos.length}} photos loaded</label>

              <input type="range" ng-model="zoomLevel" id="zoomLevel">
          </div>  
        <div>
    </div>
  </div>


    <script type="text/javascript" src="/controllers/photos.js"></script>
    <script type="text/javascript" src="/controllers/photo.js"></script>
    <script src="/js/zoom.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script>
    
      document.querySelector( '#wall' ).addEventListener( 'click', function( event ) {
        if (event.target.tagName == "IMG") {
          zoom.to({ element: event.target });
        }
      } );


