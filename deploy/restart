#!/bin/sh
touch tmp/restart.txt
echo "restarting All Your Photos after receiving push"

sudo gem install mason 
sudo gem install foreman 


export NODE_ENV=production 
export PORT=3000
export SSL_PORT=443
export HOST=www.allyourphotos.org

npm install
npm test
mason build .

#sudo stop app
sudo pkill "node"

#sudo foreman export upstart /etc/init -u ec2-user
#sudo start app-web-1
foreman start web=1 >/var/log/allyourphotos/output.log